   <script>
       // --- 3D TILT EFFECT LOGIC (Parallax) ---
       const card = document.getElementById('card');
       const container = document.body;


       container.addEventListener('mousemove', (e) => {
           // Calculate tilt angle based on mouse position
           const xAxis = (window.innerWidth / 2 - e.pageX) / 40; // Smaller divisor for more subtle tilt
           const yAxis = (window.innerHeight / 2 - e.pageY) / 40;
           card.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
       });


       container.addEventListener('mouseenter', (e) => {
           card.style.transition = 'none';
       });


       container.addEventListener('mouseleave', (e) => {
           card.style.transition = 'all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)'; // Springy transition
           card.style.transform = `rotateY(0deg) rotateX(0deg)`;
       });


       // --- PARTICLE BACKGROUND LOGIC (Web Tech) ---
       const canvas = document.getElementById('starfield');
       const ctx = canvas.getContext('2d');
       let width, height;
       let particles = [];


       function resize() {
           width = canvas.width = window.innerWidth;
           height = canvas.height = window.innerHeight;
       }


       class Particle {
           constructor() {
               this.x = Math.random() * width;
               this.y = Math.random() * height;
               this.size = Math.random() * 1.5; // Smaller particles
               this.speedX = Math.random() * 0.1 - 0.05; // Slower movement
               this.speedY = Math.random() * 0.1 - 0.05;
               this.color = '#e8eaf2'; // White/subtle color
           }
           update() {
               this.x += this.speedX;
               this.y += this.speedY;
               if (this.x > width) this.x = 0;
               if (this.x < 0) this.x = width;
               if (this.y > height) this.y = 0;
               if (this.y < 0) this.y = height;
           }
           draw() {
               ctx.fillStyle = this.color;
               ctx.globalAlpha = this.size / 2; // Make them fade
               ctx.beginPath();
               ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
               ctx.fill();
               ctx.globalAlpha = 1;
           }
       }


       function initParticles() {
           for (let i = 0; i < 70; i++) { // Fewer particles for cleaner look
               particles.push(new Particle());
           }
       }


       function animateParticles() {
           ctx.clearRect(0, 0, width, height);
           particles.forEach(p => {
               p.update();
               p.draw();
           });
           requestAnimationFrame(animateParticles);
       }


       window.addEventListener('resize', resize);
       resize();
       initParticles();
       animateParticles();
   </script>

